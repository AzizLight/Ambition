<%= form_for @post, :url => admin_posts_path(@user) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, 'error') %>
        prohibited this post from being saved</h2>
      <p>There were problems with the following fields:</p>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <p><%= f.label :title, 'Title' %></p>
    <p><%= f.text_field :title %></p>
  </div>

  <div class="field">
    <p><%= f.label :body, 'Body' %></p>
    <p><%= f.text_area :body %></p>
  </div>

  <p class="drop-down">
    <%= f.label :published, 'Status' %>
    <%= f.select(:published, options_for_select([["Published", true], ["Draft", false]], (@post.new_record? ? false: @post.published))) %>
  </p>

  <p class="hidden"><%= f.hidden_field :user_id, :value => current_user.id %></p>

  <%= f.submit "Submit" %>
<% end %>
