<div class="grid_12">
  <div class="box-header">Are you sure you want to delete the following page?</div>
  <div class="box">

    <section>
      <h3 class="no-margin">Title:</h3>
      <p><%= @page.title %></p>
    </section>

    <section>
      <h3 class="no-margin">Body:</h3>
      <p><%= markdown(@page.body) %></p>
    </section>

    <p class="no-margin">
      <%= link_to "Cancel", admin_page_path(@page) %>&nbsp;
      <%= link_to "Delete", admin_page_path(@page), :method => :delete, :class => "button small" %>
    </p>
  </div>
</div>
