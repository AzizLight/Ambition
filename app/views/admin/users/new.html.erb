<section class="grid_12">
  <%= form_for @user, :url => admin_users_path, :html => { :class => "form" } do |f| %>
    <%= field_set_tag "" do %>
      <%= render 'error_messages' %>

      <p>
        <%= f.label :username, 'Username' %>
        <%= f.text_field :username, :class => "large" %>
      </p>

      <p>
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email, :class => "large" %>
      </p>

      <p>
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, :class => "large" %>
      </p>

      <p>
        <%= f.label :password_confirmation, 'Password Confirmation' %>
        <%= f.password_field :password_confirmation, :class => "large" %>
      </p>

      <p class="inline">
        <%=  %>
        <%= f.label :admin, f.check_box(:admin) + 'Admin' %>
      </p>

      <p><%= f.submit "Submit", :class => "button grey medium" %></p>
    <% end %>
  <% end %>
</section>
