<%= render 'error_messages' %>

<%= form_for @user, :url => admin_users_path do |f| %>
  <div class="field">
    <p><%= f.label :username, 'Username' %></p>
    <p><%= f.text_field :username %></p>
  </div>

  <div class="field">
    <p><%= f.label :email, 'Email' %></p>
    <p><%= f.text_field :email %></p>
  </div>

  <div class="field">
    <p><%= f.label :password, 'Password' %></p>
    <p><%= f.password_field :password %></p>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation, 'Password Confirmation' %></p>
    <p><%= f.password_field :password_confirmation %></p>
  </div>

  <div class="button">
    <%= f.submit "Submit" %>
  </div>

<% end %>
